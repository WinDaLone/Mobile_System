<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.stevens.cs522.chatapp.singleprocess" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.ChatAppActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Service.ChatReceiverService"
            android:enabled="true"
            android:exported="false" >
        </service>
        <receiver android:name=".Activity.ChatAppActivity$Receiver">
            <intent-filter>
                <action android:name="android.intent.action.PROVIDER_CHANGED" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".Providers.ChatDbProvider"
            android:authorities="edu.stevens.cs522.chatapp.singleprocess"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <service
            android:name=".Service.ChatSenderService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>
