<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".ChatAppActivity" android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent" android:textSize="25sp" android:textStyle="bold"
        android:gravity="center" android:id="@+id/main_chatroom_title"
        android:layout_height="0sp" android:layout_weight="2" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5.5"
        android:id="@+id/message_list"
        android:transcriptMode="alwaysScroll" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/back_button"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/back_label"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
