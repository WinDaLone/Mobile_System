<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.stevens.cs522"
    android:versionCode="14"
    android:versionName="4.0" >

    <uses-sdk android:minSdkVersion="14" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="edu.stevens.cs522.bookstore.activities.BookStoreActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.stevens.cs522.bookstore.activities.AddBookActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.stevens.cs522.bookstore.activities.CheckoutActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="edu.stevens.cs522.bookstore.activities.BookDetailActivity"
            android:label="@string/title_activity_book_detail"
            android:parentActivityName="edu.stevens.cs522.bookstore.activities.BookStoreActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.stevens.cs522.bookstore.activities.BookStoreActivity" />
        </activity>

        <provider
            android:name="edu.stevens.cs522.bookstore.providers.BookProvider"
            android:authorities="edu.stevens.cs522.bookstore"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>